RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php?/$1 [L]

# Prevent access to .htaccess
<FilesMatch "^\.ht*+">
Order allow,deny
Deny from all
Satisfy All
</FilesMatch>

# Prevent access to Directory Listing
Options -Indexes
